<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="@dimen/cardview_radius"
    card_view:contentPaddingLeft="@dimen/card_margin"
    card_view:contentPaddingRight="@dimen/card_margin"
    card_view:contentPaddingTop="@dimen/card_margin"
    card_view:contentPaddingBottom="@dimen/card_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/comicData">

    <RelativeLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size" />

        <TextView
            android:id="@+id/cardContent"
            android:layout_below="@+id/cardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>