<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/savedComicData"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="@dimen/cardview_radius"
    card_view:contentPaddingBottom="@dimen/card_margin"
    card_view:contentPaddingLeft="@dimen/card_margin"
    card_view:contentPaddingRight="@dimen/card_margin"
    card_view:contentPaddingTop="@dimen/card_margin">

    <RelativeLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/savedComicCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/listButtonFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_star_white_24dp"
            android:tint="@color/accent" />

        <ImageView
            android:id="@+id/listButtonUnfavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_star_border_white_24dp"
            android:tint="@color/accent" />

        <ImageView
            android:id="@+id/listButtonRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/listButtonFavourite"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_visibility_white_24dp"
            android:tint="@color/accent" />

        <ImageView
            android:id="@+id/listButtonUnread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/listButtonFavourite"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_visibility_off_white_24dp"
            android:tint="@color/accent" />
    </RelativeLayout>
</android.support.v7.widget.CardView>